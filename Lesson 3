#include <stdio.h> 
#include <math.h> 
int main() 
{ 
    long int a=-4; 
    unsigned int n; 
    scanf("%d",&n); 
    unsigned int i=3; 
    double pi=4; 
    double b=(double)a/i; 
    double accurancy=1; 
    for(int i=0;i<n;i++)
    { 
        accurancy=accurancy/10; 
    } 
    while(abs(b)>accurancy)
    { 
        pi=pi+b; 
        i+=2; 
        a=-a; 
        b=(double)a/i; 
    } 
    printf("%.*f\n", n, pi);
    //printf("%.n*f\n", n,pi);
    //printf("%d,%f",n,pi);
}
